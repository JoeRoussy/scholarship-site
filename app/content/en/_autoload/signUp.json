{
    "signUp": {
        "header": "Join Us",
        "subheader": "If you are new to CHEH then you may use this form to join. You can join without paying the join fee and try out our site. Joining for $3 gives you the benefits of full program information searchable by subject, University or Province. You can then also apply for scholarship support to help defray your costs of attending the higher education program of your choice in Canada.",
        "image": {
            "src": "/images/logo.png",
            "alt": "canada higher education house"
        },
        "form": {
            "errorMessage": {
                "header": "Something went wrong",
                "body": {
                    "generic": "We could not sign you up, please try again later",
                    "existingEmail": "A user with this email already exists",
                    "contact": "Please use our [contact page](/contact) to reach out to us so we can resolve the issue."
                }
            },
            "inputs": {
                "name": {
                    "label": "Name",
                    "name": "name",
                    "type": "text",
                    "placeholder": "Name",
                    "validationType": "text",
                    "errorElement": {
                        "id": "signupNameError",
                        "text": "Please enter your name"
                    }
                },
                "email": {
                    "id": "signUpEmail",
                    "label": "Email",
                    "name": "email",
                    "type": "text",
                    "placeholder": "Email",
                    "validationType": "email",
                    "errorElement": {
                        "id": "signupEmailError",
                        "text": "Please enter an email"
                    }
                },
                "confirmEmail": {
                    "label": "Confirm Email",
                    "name": "confirmEmail",
                    "type": "text",
                    "placeholder": "Confirm Email",
                    "validationType": "equal",
                    "errorElement": {
                        "id": "signupConfirmEmailError",
                        "text": "Please make sure the emails match"
                    }
                },
                "password": {
                    "id": "signupPassword",
                    "label": "Password",
                    "name": "password",
                    "type": "password",
                    "placeholder": "Password",
                    "tooltip": "Toggle display",
                    "validationType": "text",
                    "errorElement": {
                        "id": "signupPasswordError",
                        "text": "Please choose a password"
                    }
                },
                "confirmPassword": {
                    "id": "signUpConfirmPassword",
                    "label": "Confirm Password",
                    "name": "confirmPassword",
                    "type": "password",
                    "placeholder": "Confirm Password",
                    "tooltip": "Toggle display",
                    "validationType": "equal",
                    "errorElement": {
                        "id": "signupConfirmPasswordError",
                        "text": "Please make sure the passwords match"
                    }
                },
                "submit": "Join"
            }
        }
    }
}
