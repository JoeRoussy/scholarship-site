{
    "signUp": {
        "header": "Join Us",
        "image": {
            "src": "/images/logo.png",
            "alt": "canada higher education house"
        },
        "form": {
            "errorMessage": {
                "header": "Something went wrong",
                "body": {
                    "generic": "We could not sign you up, please try again later",
                    "existingEmail": "A user with this email already exists",
                    "contact": "Please use our [contact page](/contact) to reach out to us so we can resolve the issue."
                }
            },
            "inputs": {
                "name": {
                    "label": "Name",
                    "name": "name",
                    "type": "text",
                    "placeholder": "Name",
                    "validationType": "text",
                    "errorElement": {
                        "id": "signupNameError",
                        "text": "Please enter your name"
                    }
                },
                "email": {
                    "id": "signUpEmail",
                    "label": "Email",
                    "name": "email",
                    "type": "text",
                    "placeholder": "Email",
                    "validationType": "email",
                    "errorElement": {
                        "id": "signupEmailError",
                        "text": "Please enter an email"
                    }
                },
                "confirmEmail": {
                    "label": "Confirm Email",
                    "name": "confirmEmail",
                    "type": "text",
                    "placeholder": "Confirm Email",
                    "validationType": "equal",
                    "errorElement": {
                        "id": "signupConfirmEmailError",
                        "text": "Please make sure the emails match"
                    }
                },
                "password": {
                    "id": "signupPassword",
                    "label": "Password",
                    "name": "password",
                    "type": "password",
                    "placeholder": "Password",
                    "tooltip": "Toggle display",
                    "validationType": "text",
                    "errorElement": {
                        "id": "signupPasswordError",
                        "text": "Please choose a password"
                    }
                },
                "confirmPassword": {
                    "id": "signUpConfirmPassword",
                    "label": "Confirm Password",
                    "name": "confirmPassword",
                    "type": "password",
                    "placeholder": "Confirm Password",
                    "tooltip": "Toggle display",
                    "validationType": "equal",
                    "errorElement": {
                        "id": "signupConfirmPasswordError",
                        "text": "Please make sure the passwords match"
                    }
                },
                "submit": "Join"
            }
        }
    }
}
