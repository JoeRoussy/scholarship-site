{{> navigation page.navigation}}

<div class="scholarshipApplicationList rootSection">
    <div class="ui container">
        <h1>{{ page.heading }}</h1>
        <form class="ui form calendarGroup">
            <div class="fields">
                <div class="ui grid">
                    <div class="sixteen wide tablet eight wide computer column">
                        <div class="field">
                            {{#with page.calendar.start}}
                                <label for="{{ id }}">{{ label }}</label>
                                <div id="{{ id }}" class="ui calendar" data-end-calendar="{{ otherId }}">
                                    <div class="ui input left icon">
                                        <i class="calendar icon"></i>
                                        <input type="text" placeholder="{{ placeholder }}">
                                    </div>
                                </div>
                            {{/with}}
                        </div>
                        <div class="field">
                            {{#with page.calendar.end}}
                                <label for="{{ id }}">{{ label }}</label>
                                <div id="{{ id }}" class="ui calendar" data-start-calendar="{{ otherId }}">
                                    <div class="ui input left icon">
                                        <i class="calendar icon"></i>
                                        <input type="text" placeholder="{{ placeholder }}">
                                    </div>
                                </div>
                            {{/with}}
                        </div>
                    </div>
                    <div class="sixteen wide tablet eight wide computer column">
                        {{> searchBar page.searchBar}}
                    </div>
                </div>
            </div>
        </form>
        <div class="applications">
            {{#each applications}}
                {{#with this}}
                    <div class="ui raised segment{{#if isFirst}} first{{/if}}">
                        <h2>{{ name }}</h2>
                        <p><a href="mailto:{{ email }}">{{ email }}</a></p>
                        <p data-hide-target="">{{{addLineBreaks application}}}</p>
                    </div>
                {{/with}}
            {{/each}}

        </div>
    </div>
</div>
