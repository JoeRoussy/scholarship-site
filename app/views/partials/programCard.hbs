{{!--
    Takes:
    tuitionInformation,
    domestic,
    international,
    saveProgram,
    moreInfo,
    program: {
        _id,
        name,
        university: {
            _id,
            name,
            province
        },
        internationalTuition,
        domesticTuition,
        length,
        notes
    },
--}}

<div class="ui card programCard" data-program-link="/programs/{{ program._id }}">
    <div class="content heading">
        {{#if program.isFavorite}}
            <div class="right floated">
                <i class="yellow star icon"></i>
            </div>
        {{/if}}
        <div class="header">
            {{ program.name }}
        </div>
    </div>
    <div class="content">
        <div class="ui sub header">{{ program.university.name }}</div>
        <div class="ui sub header basic">{{ program.university.province }}</div>
        <div class="text">{{ program.minimumAverage }}</div>
        <div class="text">{{ program.length }}</div>
    </div>
    <div class="content">
        <div class="ui sub header">{{ tuitionInfomation }}</div>
        <div class="text">
            <span class="bold">{{ domestic }}</span>
            <span>{{{formatCurrencyFlat program.domesticTuition @root.selectedUserLanguage}}}</span>
        </div>
        <div class="text">
            <span class="bold">{{ international }}</span>
            <span>{{{formatCurrencyFlat program.internationalTuition @root.selectedUserLanguage}}}</span>
        </div>
    </div>
</div>
